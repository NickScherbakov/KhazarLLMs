# ============================================
# KhazarLLMs Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# ============================================
# LLM Provider API Keys
# ============================================
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/settings/keys

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# System Configuration
# ============================================

# Default LLM provider: mock, openai, or anthropic
# Use 'mock' for testing without API costs
DEFAULT_PROVIDER=mock

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum number of agents in an ensemble
MAX_AGENTS=7

# Maximum iterations for creative sessions
MAX_ITERATIONS=10

# Default temperature for creative agents (0.0-1.0)
# Higher = more creative, Lower = more focused
CREATIVE_TEMPERATURE=0.9

# ============================================
# Session Configuration
# ============================================

# Directory to save session outputs
SESSION_OUTPUT_DIR=./sessions

# Default output format: json or text
DEFAULT_OUTPUT_FORMAT=json

# ============================================
# API Configuration
# ============================================

# API timeout in seconds
API_TIMEOUT=60

# Maximum tokens per response
MAX_TOKENS=2000

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60
